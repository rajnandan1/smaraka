{
  "name": "smaraka",
  "version": "0.0.1",
  "scripts": {
    "dev:svelte": "vite dev",
    "go:deps": "go mod download",
    "dev:go": "npm run go:deps && go run main.go",
    "dev": "concurrently --kill-others \"npm run dev:svelte\" \"npm run dev:go\"",
    "build": "vite build && npm run go:deps && go build -o smaraka",
    "start": "./smaraka",
    "preview": "vite preview",
    "go": "npm run go:deps && go run main.go",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@fontsource/fira-mono": "^5.0.0",
    "@neoconfetti/svelte": "^2.0.0",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-static": "^3.0.4",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/canvas-confetti": "^1.6.4",
    "@types/node": "^22.13.9",
    "autoprefixer": "^10.4.20",
    "bits-ui": "^0.22.0",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.9",
    "typescript": "^5.0.0",
    "vite": "^5.0.3"
  },
  "type": "module",
  "dependencies": {
    "@formkit/auto-animate": "^0.8.2",
    "@mozilla/readability": "^0.5.0",
    "axios": "^1.7.7",
    "canvas-confetti": "^1.9.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dom-to-semantic-markdown": "^1.2.4",
    "dotenv": "^16.4.7",
    "jsdom": "^25.0.0",
    "lucide-svelte": "^0.438.0",
    "mode-watcher": "^0.4.1",
    "qrcode": "^1.5.4",
    "svelte-sonner": "^0.3.27",
    "tailwind-merge": "^2.5.2",
    "tailwind-variants": "^0.2.1",
    "vaul-svelte": "^0.3.2"
  }
}
